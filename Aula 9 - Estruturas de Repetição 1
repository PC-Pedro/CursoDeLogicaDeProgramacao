algoritmo "conteAte10"
var
  contador: Inteiro
inicio
  contador <- 0
  Enquanto (contador <= 10) faca
      Escreval(contador)
      contador <- contador + 1
  FimEnquanto
fimalgoritmo
__________________________________________
algoritmo "ContadorInteligente"
var

inicio
  Escreva("Digite o valor de inicio da contagem: ")
  Leia(Valor_inicio)
  Escreva("Digite o valor do final da contagem: ")
  Leia(Valor_fim)
  Se (Valor_inicio < Valor_fim) entao
    Enquanto (Valor_inicio <= Valor_fim) faca
      Escreva(Valor_inicio, " ")
      Valor_inicio <- Valor_inicio + 1
    FimEnquanto
  senao 
    Se (Valor_inicio > Valor_fim) entao
      Enquanto (Valor_inicio <= Valor_fim) faca
        Escreva(Valor_inicio, " ")
        Valor_inicio <- Valor_inicio - 1
      FimEnquanto
fimalgoritmo
