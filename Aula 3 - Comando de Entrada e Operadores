algoritmo "Soma"
var
  N1, N2, S: Inteiro
inicio
  Escreva("Informe um numero: ")
  Leia(N1)
  Escreva("Informe outro numero: ")
  Leia(N2)
  S <- N1 + N2
  Escreva("A soma de ", N1 ,"com ", N2 ,"e igual a ", S)
fimalgoritmo
